<?php
/** @var umiTemplaterPHP|BaseExtension|PageExtension|UmiSettingsExtension $this */
/** @var array $variables */
$page = $this->getPage();

$title = trim($page->getValue(SiteContentPagePaymentModel::field_left_title));
$content = trim($page->getValue(SiteContentPagePaymentModel::field_left_content));
if($title || $content):?>
    <section class="page-main__text-block flex-grid__column flex-grid__column_1 text-block">
        <?php if($title):?>
            <h2 class="text-block__heading"><?php echo $title;?></h2>
        <?php endif;?>

        <?php if($content):?>
            <div class="text-block__text">
                <?php echo $this->parseTplMacros($content, $page->getId());?>
            </div>
        <?php endif;?>
    </section>
<?php endif;?>