{% macro addSliderList(name, img) %}
    <li class="slider__item slider__item_active">
        <picture>
            <source
                srcset="/img/slider/{{img}}-small.webp 1x, /img/slider/{{img}}-small@2x.webp 2x"
                media="(max-width: 768px)"
                type="image/webp"
            />
            <source
                srcset="/img/slider/{{img}}-small.jpg 1x, /img/slider/{{img}}-small@2x.jpg 2x"
                media="(max-width: 768px)"
            />
            <source
                srcset="/img/slider/{{img}}-medium.webp 1x, /img/slider/{{img}}-medium@2x.webp 2x"
                media="(max-width: 1000px)"
                type="image/webp"
            />
            <source
                srcset="/img/slider/{{img}}-medium.jpg 1x, /img/slider/{{img}}-medium@2x.jpg 2x"
                media="(max-width: 1000px)"
            />
            <source
                srcset="/img/slider/{{img}}.webp 1x"
                type="image/webp"
            />
            <img
                src="/img/slider/{{img}}.jpg"
                width="1200" height="570"
                class="slider__img"
                alt="{{name}}"
            />
        </picture>
    </li>
{% endmacro %}

<ul class="slider__list">
    {% for item in slides %}
		{{ addSliderList(item.name, item.img) }}
    {% endfor %}
</ul>

			
