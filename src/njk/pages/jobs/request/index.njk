{% set title = 'Работа в фитнес-клубе Olympic Touch' %}
{% set description = 'Вы можете присоединиться к команде фитнес-клуба Olympic Touch' %}
{% set keywords = 'Вакансии в фитнес-клубе, вакансия тренера, вакансия администратора фитнес-клуба' %}
{% set activeTopBar = 'jobs' %}

{% extends '../layouts/index.njk' %}

{% block content %}
	<header class="page-main__header main-header">
		<ul class="main-header__breadcrumbs breadcrumbs" aria-label="Хлебные крошки">
			<li class="breadcrumbs__item">
				<a href="/" class="breadcrumbs__link">
					<span class="visually-hidden">Главная страница</span>
				</a>
			</li>
			<li class="breadcrumbs__item">
				<a href="/jobs/" class="breadcrumbs__link">Вакансии</a>
			</li>
			<li class="breadcrumbs__item">Отправка резюме</li>
		</ul>

		<h1 class="main-header__heading">Отправка резюме</h1>
	</header>

	<section class="page-main__section">
		<div class="page-main__container">
			<div class="content flex-grid flex-grid_8 flex-grid_large_12">
				<div class="content__text flex-grid__column flex-grid__column_8 flex-grid__column_large_9">
					<form action="/jobs/request/response/" method="post" class="form">
						<label class="form__label field">
							<p class="field__text">Имя <small>обязательное поле</small></p>
							<input type="text" name="name" class="field__input" placeholder="Укажите имя" required minlength="2" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Фамилия <small>обязательное поле</small></p>
							<input type="text" name="surname" class="field__input" placeholder="Укажите фамилию" required minlength="2" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Отчество</p>
							<input type="text" name="fathername" class="field__input" placeholder="Укажите отчество" minlength="2" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Дата рождения <small>обязательное поле</small></p>
							<input type="date" name="birthday" class="field__input" placeholder="дд.мм.гггг" min="1970-01-01" max="2000-12-31" value="1995-06-15" required>
							<!-- Значение max из расчета текущей даты минус 20 лет -->
						</label>

						<label class="form__label field">
							<p class="field__text">Гражданство <small>обязательное поле</small></p>
							<input type="text" name="citizenship" class="field__input" placeholder="РФ" required minlength="2" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Электронная почта <small>обязательное поле</small></p>
							<input type="email" name="email" class="field__input" placeholder="name@email.ru" required>
						</label>

						<label class="form__label field">
							<p class="field__text">Телефон</p>
							<input type="tel" name="phone" class="field__input" placeholder="8 999 213-45-67" pattern="^[0-9-+() ]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Образование <small>обязательное поле</small></p>
							<input type="text" name="education" class="field__input" placeholder="Укажите учебное заведение, факультет, специализацию и год завершения" required minlength="5" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Спортивная квалификация</p>
							<input type="text" name="qualification" class="field__input" placeholder="Укажите, если претендуете на должность тренера" minlength="4" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Опыт работы <small>обязательное поле</small></p>
							<input type="text" name="experience" class="field__input" placeholder="5 лет и 8 месяцев" required>
						</label>

						<label class="form__label field">
							<p class="field__text">Желаемая должность <small>обязательное поле</small></p>
							<input type="text" name="post" class="field__input" placeholder="Тренер" required minlength="4" pattern="^[A-Za-zА-Яа-я0-9_-]*$">
						</label>

						<label class="form__label field">
							<p class="field__text">Комментарии</p>
							<textarea name="message" rows="7" class="field__input field__input_textarea" placeholder="Введите то, что хотите нам сообщить"></textarea>
						</label>

						<label class="form__label checkbox">
							<input type="checkbox" name="argeement" class="visually-hidden" required checked>
							<p class="checkbox__text">Я согласен с условиями на <a href="/privacy/">обработку персональных данных</a></p>
						</label>

						<button type="submit" class="form__button button">Отправить</button>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
